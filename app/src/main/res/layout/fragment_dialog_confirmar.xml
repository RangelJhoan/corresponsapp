<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="480dp"
    android:orientation="vertical"
    tools:context=".interfacesgraficas.dialogos.DialogConfirmarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/design_degradadoazul"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirmar Transacción"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAccion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acción a realizar"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetAccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDocumentoAccion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento que realiza la acción"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetDocumento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumeroTarjeta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de tarjeta"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFechaExpiracion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFechaExpiracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Expiración"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDocumentoRecibe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDocumentoRecibe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento cliente que recibe"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetDocumentoRecibe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento recibe"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llValor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la transacción"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCuotas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCuotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de cuotas"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetCuotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuotas"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llComision"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvComision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la comisión"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSetComision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comision"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:backgroundTint="#8000c9"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:backgroundTint="#0100C1"
            android:text="Confirmar" />

    </LinearLayout>

</LinearLayout>