<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAccion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/retirar"
            android:src="@drawable/retirar_128" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDocumento1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número documento 1" />

            <TextView
                android:id="@+id/tvDocumento2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número documento 2" />

            <TextView
                android:id="@+id/tvNumeroTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número tarjeta" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha" />

            <TextView
                android:id="@+id/tvMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>